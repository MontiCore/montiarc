<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- == PROJECT COORDINATES ============================================= -->

	<parent>
		<groupId>montiarc.generators</groupId>
		<artifactId>generators</artifactId>
	    <version>4.5.0</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<artifactId>ma2java-it</artifactId>

	<!-- == PROJECT DEPENDENCIES ============================================= -->

	<dependencies>
		<dependency>
			<groupId>de.se_rwth.commons</groupId>
			<artifactId>se-commons-groovy</artifactId>
		</dependency>

		<dependency>
			<groupId>montiarc.generators</groupId>
			<version>${project.version}</version>
			<artifactId>ma2java</artifactId>
		</dependency>

		<!-- .. Test Libraries ............................................... -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>de.se_rwth.maven</groupId>
				<artifactId>se-groovy-maven-plugin</artifactId>
				<configuration>
					<baseClass>de.montiarc.generator.MontiArcScript</baseClass>
					<arguments>
						<out>${basedir}/target/generated-sources/applications/</out>
						<modelPath>${basedir}/src/main/resources/</modelPath>
					</arguments>
					<script>de/montiarc/generator/montiarc.groovy</script>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>execute</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>montiarc.generators</groupId>
						<version>${project.version}</version>
						<artifactId>ma2java</artifactId>
					</dependency>
					<dependency>
						<groupId>de.se_rwth.commons</groupId>
						<artifactId>se-commons-utilities</artifactId>
						<version>${se-commons.version}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/target/generated-sources/applications/</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>