<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- == PROJECT COORDINATES ============================================== -->
  <parent>
    <groupId>montiarc.libraries</groupId>
    <artifactId>libraries</artifactId>
    <version>7.2.0-SNAPSHOT</version>
  </parent>

  <artifactId>lejos-rte</artifactId>

  <properties>
    <models.dir>${basedir}/src/main/resources/</models.dir>
    <hwc.dir>${basedir}/src/main/java/</hwc.dir>
    <gen.dir>${basedir}/target/generated-sources/</gen.dir>
  </properties>

  <!-- == PROJECT DEPENDENCIES ============================================= -->
  <dependencies>
    <!-- MontiCore Dependencies -->
    <dependency>
      <groupId>de.se_rwth.commons</groupId>
      <artifactId>se-commons-logging</artifactId>
    </dependency>

    <!-- MontiArc -->
    <dependency>
      <groupId>montiarc.generators</groupId>
      <version>${project.version}</version>
      <artifactId>cd2pojo</artifactId>
    </dependency>

    <dependency>
      <groupId>montiarc.libraries</groupId>
      <artifactId>majava-rte</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Test Libraries -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-params</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>${mockito.version}</version>
      <scope>test</scope>
    </dependency>

    <!-- Platform specific API -->
    <dependency>
      <groupId>lejos.nxt</groupId>
      <artifactId>classes</artifactId>
      <version>0.9.1-beta</version>
    </dependency>
  </dependencies>

  <!-- == PROJECT BUILD SETTINGS =========================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>${dependency.plugin}</version>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>validate</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>montiarc.libraries</groupId>
                  <artifactId>maJavaLib</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${basedir}/target/${librarymodels.classifier}/</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${exec.plugin}</version>
        <executions>
          <execution>
            <id>cd2pojo</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <includeProjectDependencies>false</includeProjectDependencies>
              <includePluginDependencies>true</includePluginDependencies>
              <mainClass>de.monticore.cd2pojo.POJOGeneratorScript</mainClass>
              <arguments>
                <modelPath>${models.dir}</modelPath>
                <out>${gen.dir}</out>
              </arguments>
            </configuration>
            <phase>generate-sources</phase>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>montiarc.generators</groupId>
            <artifactId>cd2pojo</artifactId>
            <version>${project.version}</version>
            <classifier>jar-with-dependencies</classifier>
            <exclusions>
              <exclusion>
                <groupId>*</groupId>
                <artifactId>*</artifactId>
              </exclusion>
            </exclusions>
          </dependency>
        </dependencies>
      </plugin>

      <plugin>
        <groupId>de.se_rwth.maven</groupId>
        <artifactId>se-groovy-maven-plugin</artifactId>
        <version>${se-groovy.plugin}</version>
        <configuration>
          <baseClass>montiarc.generator.codegen.MAAGeneratorScript</baseClass>
          <arguments>
            <out>${gen.dir}</out>
            <modelPath>${models.dir}</modelPath>
            <handwrittenCode>${hwc.dir}</handwrittenCode>
          </arguments>
          <script>montiarc/generator/maagenerator.groovy</script>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>execute</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>montiarc.generators</groupId>
            <artifactId>ma2java</artifactId>
            <version>${project.version}</version>
          </dependency>
          <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>${guava.version}</version>
          </dependency>
          <dependency>
            <groupId>de.se_rwth.commons</groupId>
            <artifactId>se-commons-utilities</artifactId>
            <version>${se-commons.version}</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.12</version>
        <executions>
          <execution>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${basedir}/target/generated-sources/</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Jar Configuration -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${jar.plugin}</version>
        <executions>
          <execution>
            <id>librarymodels</id>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>${librarymodels.classifier}</classifier>
              <classesDirectory>${basedir}/src/main/resources/</classesDirectory>
            </configuration>
          </execution>
          <execution>
            <id>library-sym-files</id>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>libsymf</classifier>
              <classesDirectory>${basedir}/target/generated-sources</classesDirectory>
              <excludes>
                <exclude>**/*.java</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources/</directory>
      </resource>
    </resources>
  </build>
</project>