package components.body.timing;

import components.body.subcomponents._subcomponents.HasStringInputAndOutput;
import components.body.subcomponents._subcomponents.HasTwoStringInAndOneStringOut;

/*
 * Invalid model. Contains one communication cycle.
 *
 * @implements [Hab16] CG1: Communication cycles without delay should be avoided. (p. 73 Lst. 3.55)
 * TODO Add test
 * TODO Implement CoCo
 */
component DoesNotBreakDelayCycleInMoreComplexSubC {

    port
        in String sIn,
        out String sOut;

    component HasStringInputAndOutput a1, a2;
    component HasTwoStringInAndOneStringOut c;
    
    component UsingMultipleComponents usingMultiple;
    
    connect sIn -> c.sIn1;
    connect c.sOut -> a1.pIn;
    connect a1.pOut -> a2.pIn, usingMultiple.sIn1;
    connect a2.pOut -> usingMultiple.sIn2, sOut;
    
    connect usingMultiple.sOut -> c.sIn2;  // Invalid communication cycle
    
}
