component grammar MessageHandling extends ArcBasis {

// TODO^BR: also hier m√∂chte ich gerne ggf. Einspruch einlegen.
// da herrscht Diskussionsbedarf.
  /**
   * BatchStatements define which ports should be
   * handled in batch processing mode instead of
   * handling only one incoming message per tick
   */
  BatchStatement implements ArcElement =
      key("batch") batchPorts:(Name || ",")+ ";";

  /**
   * SyncStatements allow the specification of groups of ports
   * that should only be handled together
   */
  SyncStatement implements ArcElement =
      key("sync") syncedPort:(Name || ",")+ ";";
}
